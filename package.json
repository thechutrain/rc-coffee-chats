{
  "name": "rc-coffee-chats",
  "version": "2.0.1",
  "description": "A simple Node app with SQLite as a database management system, instantly up and running.",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node src/server.ts",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "_start": "cross-env NODE_ENV=production ts-node src/server.ts",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "tslint": "tslint --format stylish --project tsconfig.json",
    "test:db": "cross-env DB_FILE=test.db DEBUG=1 ts-node ./src/db/",
    "clean": "rm -rf dist",
    "clean:db": "rimraf .data/test.db",
    "pretest": "rimraf src/db/__tests__/**/*.db",
    "test": "cross-env DB_FILE=test.db jest",
    "t": "jest --watch -- -- src/middleware",
    "build": "npm run clean && tsc",
    "build-ts": "tsc",
    "cron-hourly": "cross-env NODE_ENV=production node dist/crons/hourly.js",
    "dev-cron-hourly": "cross-env NODE_ENV=development ts-node src/crons/hourly.ts",
    "onboard-ngw": "cross-env NODE_ENV=development ts-node src/one-off-services/onboard-ngw.ts",
    "copy-prod-dev": "cp data/prod.db data/development.db",
    "dev-matchify": "cross-env NODE_ENV=development ts-node src/crons/matchify",
    "prod-matchify": "cross-env NODE_ENV=production node dist/crons/matchify",
    "dev-warnings": "cross-env NODE_ENV=development ts-node src/crons/match-warnings",
    "dev-offboard": "cross-env NODE_ENV=development ts-node src/crons/off-board/index.ts",
    "dev-onboard": "cross-env NODE_ENV=development ts-node src/crons/on-board/index.ts",
    "dev-notify-users": "cross-env NODE_ENV=development ts-node src/one-off-services/notify-users",
    "dev-send-matches": "cross-env NODE_ENV=development ts-node src/one-off-services/_manual-send-todays-matches.ts",
    "dev-update-zoom-urls": "cross-env NODE_ENV=development ts-node src/crons/getZoomUrls/index.ts"
  },
  "lint-staged": {
    "src/*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "axios": "^0.18.1",
    "better-sqlite3": "^5.4.0",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.3",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "winston": "^2.4.0"
  },
  "engines": {
    "node": "10.x"
  },
  "repository": {
    "url": "https://github.com/thechutrain/coffee-chats-2.0"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ],
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.123",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^10.12.18",
    "@types/pg": "^7.4.11",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.5"
  }
}
